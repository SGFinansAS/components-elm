spinner : List (Attribute msg) -> Html msg
spinner attrs =
    iconContainer
        attrs
        [ Svg.svg
            [ fill "none"
            , viewBox "0 0 20 20"
            , SvgAttrs.css
                [ Css.property "animation-iteration-count" "infinite"
                , Css.property "animation-timing-function" "linear"
                , Css.property "transform-origin" "center"
