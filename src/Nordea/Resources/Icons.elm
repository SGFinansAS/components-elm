                , animationName
                    (keyframes
                        [ ( 0, [ Animations.transform [ Css.rotateZ (Css.deg 0) ] ] )
                        , ( 100, [ Animations.transform [ Css.rotateZ (Css.deg 360) ] ] )
                        ]
                    )
